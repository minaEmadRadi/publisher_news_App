@using MVCLab04.Models
@model user
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container justify-content-around ">
    <h2 class="col-8 text-center">Register New User</h2>
    <form method="post" >
        <table class="table table-dark justify-content-center">
            <tr>
                <td>@Html.LabelFor(n => n.name)</td>
                <td>@Html.TextBoxFor(n => n.name)</td>
                <td>@Html.ValidationMessageFor(n => n.name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.email)</td>
                <td>@Html.TextBoxFor(n => n.email)</td>
                <td>@Html.ValidationMessageFor(n => n.email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.password)</td>
                <td>@Html.PasswordFor(n => n.password)</td>
                <td>@Html.ValidationMessageFor(n => n.password)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.confirm)</td>
                <td>@Html.PasswordFor(n => n.confirm)</td>
                <td>@Html.ValidationMessageFor(n => n.confirm)</td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Save" class="badge-primary col-3 offset-11" />
                </td>
            </tr>
        </table>

    </form>
</div>

