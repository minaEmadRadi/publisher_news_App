@using MVCLab04.Models
@model MVCLab04.Models.news
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container justify-content-around ">
    <h2 class="col-8 text-center">Add New News</h2>
    <form method="post" enctype="multipart/form-data">
        <table class="table table-dark justify-content-center">
            <tr>
                <td>@Html.LabelFor(n => n.title)</td>
                <td>@Html.TextBoxFor(n => n.title)</td>
                <td>@Html.ValidationMessageFor(n=>n.title)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.pref)</td>
                <td>@Html.TextAreaFor(n=>n.pref)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.desc)</td>
                <td>@Html.TextAreaFor(n => n.desc)</td>
                <td>@Html.ValidationMessageFor(n => n.desc)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.date)</td>
                <td><input type="datetime-local" name="date" required/></td>
                <td>@Html.ValidationMessageFor(n => n.date )</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.catogery_id)</td>
               @*// <td>@Html.DropDownListFor(e=>e.catogery_id,(SelectList)ViewData["aa"])</td>*@
                <td><select name="catogery_id">
    @foreach (var item in (List<catogery>)ViewBag.cat)
    {
        <option value="@item.id">@item.name</option>

    }
                    </select>
</td>
            
            </tr>
            <tr>
                <td>@Html.LabelFor(n => n.photo)</td>
                <td><input type="file" name="httpPosted" /></td>
            </tr>
            <tr>
                <td >
                    <input type="submit" value="Save" class="badge-primary col-3 offset-11"/>
                </td>
            </tr>
        </table>
        
    </form>
</div>

