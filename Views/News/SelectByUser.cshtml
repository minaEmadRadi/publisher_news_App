@using MVCLab04.Models
@model List<news>
@{
    ViewBag.Title = "SelectByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container justify-content-around ">
    <h2 class="col-8 text-center">All News</h2>
  
        <table class="table table-dark justify-content-center">
            <tr>
                <th>Title</th>
                <th>Pref</th>
                <th>Description</th>
                <th>Date and Time</th>
                <th>Catogery</th>
                <th>Operations</th>
            </tr>
            
                @foreach (var item in Model)
                {
                    <tr>
    <td>@Html.DisplayFor(e => @item.title)</td>
    <td>@Html.TextAreaFor(e => @item.pref,new {disabled=true })</td>
    <td>@Html.TextAreaFor(e => @item.desc,new { disabled = true })</td>
    <td>@Html.DisplayFor(e => @item.date)</td>
    <td>@Html.DisplayFor(e => @item.catogery.name)</td>
    <td>
        @Html.ActionLink("Edit", "Edit", "News", new { id = item.id }, null) |
        @Html.ActionLink("Remove", "Delete", "News", new { id = item.id }, null)
    </td>
</tr>
                }



            
                

            
        </table>

    
</div>


